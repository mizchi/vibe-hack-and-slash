{
  "name": "hacknslash",
  "version": "0.0.1",
  "description": "A hack and slash game built with React Ink",
  "type": "module",
  "scripts": {
    "start": "tsx src/app/index.tsx",
    "dev": "tsx watch src/app/index.tsx",
    "simulate": "tsx src/app/simulate.ts",
    "evaluate": "tsx src/app/evaluate.ts",
    "evaluate:ai": "tsx scripts/evaluate-battle.ts",
    "poc:ink-no-input": "tsx poc/02-ink-no-input.tsx",
    "build": "tsc",
    "test": "vitest",
    "format": "biome format --write .",
    "lint": "oxlint",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cli",
    "game",
    "hacknslash",
    "react-ink"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ink": "^5.0.1",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^0.0.4",
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.14",
    "oxlint": "^1.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18"
  }
}
